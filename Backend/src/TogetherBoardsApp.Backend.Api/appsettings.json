{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "OutboxPatternOptions": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  },
  "TokenOptions": {
    "AccessTokenOptions": {
      "LifeTimeInSeconds": 300
    },
    "RefreshTokenOptions": {
      "Length": 512,
      "LifeTimeInMinutes": 120
    }
  }
}
